{
    "manifest_version": 2,
    "name": "Useless Extension",
    "version": "1.0",
    "description": "The most useless and weird web extension ever created",
    "browser_action": {
      "default_popup": "popup.html"
    },
    "background": {
      "scripts": ["background.js"]
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "permissions": ["activeTab", "<all_urls>"]
  }
